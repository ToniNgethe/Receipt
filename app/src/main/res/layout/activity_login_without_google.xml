<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.example.toni.receipt.WelcomeUi.LoginActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signinBtnGoogle"
        android:layout_below="@+id/imageView2"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:padding="5dp"
            android:text="My Receipts"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="0.01"
            android:fontFamily="monospace"
            android:gravity="center"
            android:padding="10dp"
            android:text="All your receipts in one place"
            android:textColor="@android:color/black"
            android:textSize="13sp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Email"
            app:met_iconLeft="@mipmap/ic_email_black_24dp"
            app:met_primaryColor="@color/colorAccent"

            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password"
            app:met_iconLeft="@mipmap/ic_lock_black_24dp"
            app:met_primaryColor="@color/colorAccent" />

        <Button
            android:id="@+id/btn_login_continue"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:text="Get started"
            android:textAllCaps="false" />


    </LinearLayout>


</RelativeLayout>
